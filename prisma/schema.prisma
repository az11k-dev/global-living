generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                  Int      @id @default(autoincrement())
  email               String   @unique
  password            String?
  name                String?
  image               String?
  provider            String // credentials | google | github etc
  createdAt           DateTime @default(now())
  country             String?
  position            String?
  city                String?
  interestedCountries Json?
  monthlyBudget       String?

  reviews Review[]
}

model Review {
  id        Int      @id @default(autoincrement())
  rating    Int
  text      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId Int

  city   City? @relation(fields: [cityId], references: [id], onDelete: Cascade)
  cityId Int?

  country   Country? @relation(fields: [countryId], references: [id], onDelete: Cascade)
  countryId Int?

  @@unique([userId, cityId])
  @@unique([userId, countryId])
}

model Costs {
  id        Int      @id @default(autoincrement())
  rent      Int
  food      Int
  transport Int
  internet  Int      @default(0)
  utilities Int      @default(0)
  country   Country? @relation(fields: [countryId], references: [id], onDelete: Cascade)
  countryId Int?     @unique

  city   City? @relation(fields: [cityId], references: [id], onDelete: Cascade)
  cityId Int?  @unique
}

model City {
  id            Int     @id @default(autoincrement())
  name          String
  description   String
  country       Country @relation(fields: [countryId], references: [id])
  countryId     Int
  rating        Float
  image         String
  population    Int
  temperature   Int
  timezone      String
  internetSpeed String?
  lat           Float?
  lng           Float?

  costs     Costs?
  totalCost Int      @default(0)
  reviews   Review[]
}

model Country {
  id          Int     @id @default(autoincrement())
  name        String
  flag        String
  continent   String?
  language    String?
  image       String
  rating      Float
  temperature Int?
  description String

  costs     Costs?
  totalCost Int      @default(0)
  cities    City[]
  reviews   Review[]
}
