generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Costs {
  id        Int     @id @default(autoincrement())
  rent      Int
  food      Int
  transport Int
  country   Country @relation(fields: [countryId], references: [id], onDelete: Cascade)
  countryId Int     @unique
}

model Country {
  id          Int    @id @default(autoincrement())
  name        String
  flag        String
  image       String
  rating      Float
  description String
  costs       Costs?
  totalCost   Int
}
